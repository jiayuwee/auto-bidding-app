{
  "name": "auto-bidding-app",
  "version": "1.0.0",
  "main": "dist/index.js",
  "scripts": {
    "start": "react-native start",
    "dev": "expo start --port 3000",
    "android": "react-native run-android",
    "ios": "react-native run-ios",
    "build": "tsc",
    "test": "jest",
    "lint": "eslint . --ext .js,.jsx,.ts,.tsx",
    "format": "prettier --write \"src/**/*.{js,jsx,ts,tsx}\"",
    "clean": "rimraf dist",
    "prepare": "npm run build",
    "predeploy": "npm run build && npm test",
    "deploy:android": "cd android && ./gradlew assembleRelease",
    "deploy:ios": "cd ios && pod install && xcodebuild -workspace MyApp.xcworkspace -scheme MyApp -sdk iphoneos -configuration Release"
  },
  "dependencies": {
    "@react-navigation/native": "7.1.6",
    "@react-navigation/stack": "7.2.10",
    "expo": "~50.0.0",
    "react": "18.2.0",
    "react-dom": "18.2.0",
    "react-native": "0.72.17",
    "uuid": "^11.1.0"
  },
  "devDependencies": {
    "@babel/plugin-transform-class-properties": "^7.25.9",
    "@babel/plugin-transform-nullish-coalescing-operator": "^7.26.6",
    "@babel/plugin-transform-numeric-separator": "^7.25.9",
    "@babel/plugin-transform-object-rest-spread": "^7.25.9",
    "@babel/plugin-transform-optional-catch-binding": "^7.25.9",
    "@babel/plugin-transform-optional-chaining": "^7.25.9",
    "@types/jest": "^29.5.12",
    "@types/react": "^19.0.0",  // 更新React类型定义
    "@types/react-dom": "^19.0.0",  // 确保版本匹配
    "@types/react-native": "0.72.8",
    "typescript": "^5.2.0"
  },
  "description": "✅ 基础框架已搭建  \r ✅ TypeScript配置完成  \r ✅ 已连接GitHub仓库",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/jiayuwee/auto-bidding-app.git"
  },
